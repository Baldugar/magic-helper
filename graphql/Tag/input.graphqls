"""
Create a new tag, optionally linked to a card.
"""
input CreateTagInput {
    type: TagType!
    name: String!
    description: String
    colors: [MTG_Color!]
    cardID: ID
}

"""
Update tag fields.
"""
input UpdateTagInput {
    ID: ID!
    name: String
    description: String
    colors: [MTG_Color!]
}

"""
Assign a tag to a card.
"""
input AssignTagInput {
    tagID: ID!
    cardID: ID!
}

"""
Remove a tag from a card.
"""
input UnassignTagInput {
    tagID: ID!
    cardID: ID!
}
